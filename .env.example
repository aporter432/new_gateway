# Application Settings
APP_NAME=new_gateway
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/new_gateway
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# AWS Settings
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_SQS_QUEUE_URL=https://sqs.region.amazonaws.com/account/queue
AWS_DYNAMODB_TABLE=new_gateway_table

# ISAT Gateway Settings
IGWS2_HOST=your_igws2_host
IGWS2_PORT=your_igws2_port
IGWS2_USERNAME=your_username
IGWS2_PASSWORD=your_password
IGWS2_SSL_ENABLED=True

# OGx Gateway Settings
OGX_API_URL=your_ogx_api_url
OGX_API_KEY=your_api_key
OGX_SSL_VERIFY=True

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Notification Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@example.com

SMS_PROVIDER_API_KEY=your_sms_api_key
SMS_PROVIDER_URL=https://sms.provider.com/api

# Monitoring Settings
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090
TRACE_SAMPLING_RATE=1.0

# Cache Settings
TEMPLATE_CACHE_TTL=3600
CONFIG_CACHE_TTL=1800
MESSAGE_CACHE_TTL=300
